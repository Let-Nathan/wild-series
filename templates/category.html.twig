{% extends "base.html.twig" %}
    {% block body %}
            <p class="h1 d-flex justify-content-center mb-4">Film selection for {{ category.name }} category </p>
        {% for program in programs %}
            <div class="container mb-5">
                <div class="row-col-12">
                    <div class="col-5 container mt-4">
                        <div class="row card d-flex justify-content-around flex-column align-items-center">
                            <p class="h4 d-flex justify-content-center"> {{ program.title }} </p>
                            <p class="h6"> {{ program.synopsis }} </p>
                            <img src="{{ program.image }}" class="img-fluid img-bg">
                            <form id="season" method="get">
                                <div class="d-flex justify-content-between">
                                    <select label="season" name="season" id="season" class="mt-2 mb-2 col-8">
                                        <!-- Send twig seasons -->
                                        <option value="">Choose Season
                                        {%  for season in program.seasons %}
                                        <option value="{{ season.id }}"> {{ season.number }} </option>
                                        {% endfor %}
                                        </option>
                                    </select>
                                    <button class="col-3 btn btn-primary text-white d-flex align-items-center justify-content-center mt-2" style="height: 1.5rem;" type="submit">Select</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
        {% endfor %}
    {% endblock %}