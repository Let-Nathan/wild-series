{% extends 'base.html.twig' %}

{% block title %}Program index{% endblock %}

{% block body %}
    <h1>Program index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Synopsis</th>
                <th>Image</th>
                <th>Country</th>
                <th>Years</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for program in programs %}
            <tr>
                <td>{{ program.id }}</td>
                <td>{{ program.title }}</td>
                <td>{{ program.synopsis }}</td>
                <td>{{ program.image }}</td>
                <td>{{ program.country }}</td>
                <td>{{ program.years }}</td>
                <td>
{#                    <a href="{{ path('app_program_show', {'id': program.id}) }}">show</a>#}
{#                    <a href="{{ path('app_program_edit', {'id': program.id}) }}">edit</a>#}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_program_new') }}">Create new</a>
{% endblock %}
